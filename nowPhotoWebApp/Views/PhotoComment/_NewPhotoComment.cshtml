                @Html.ValidationMessageFor(model => model.PhotoId, "", new { @class = "text-danger" })
            </div>
        </div>

        @* Text Box an submit button*@
        @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", @style = "display:inline", @placeholder = "Write new comment..." } })
